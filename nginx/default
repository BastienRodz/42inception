  server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name barodrig.42.fr;

    ssl_certificate /etc/nginx/ssl/wwww.barodrig.42.fr.crt;
    ssl_certificate_key /etc/nginx/ssl/www.barodrig.42.fr.key;
    ssl_protocol TLSv1.3 ;

    root /var/www/wp;
    autoindex on;
    index index.html index.php;
	location / {
		try_files $uri $uri/ =404;
	}
	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_pass unix:/run/php/php7.3-fpm.sock;
	}
 }
